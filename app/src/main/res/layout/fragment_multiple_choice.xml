<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragmentStyle"
    tools:context="com.example.isabel.usertestapp.MultipleChoiceFragment">
    <TextView
        style="@style/TextFieldStyle"
        android:id="@+id/multipleAnswerQuestion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />
    <LinearLayout
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/buttonLayoutMultiple"
        android:layout_below="@+id/multipleAnswerQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />
    <Button
        style="@style/ButtonDontKnowStyle"
        android:text="@string/answer_dont_know"
        android:id="@+id/multipleDontKnow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
    <TextView
        style="@style/TextFieldSwipeStyle"
        android:text="@string/swipe_to_continue"
        android:id="@+id/multipleChoiceContinue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>
