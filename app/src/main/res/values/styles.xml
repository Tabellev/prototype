<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">#F1F1F1</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextFieldStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TextFieldSwipeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="ButtonAnswerStyle">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">#A0C8DC</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonDontKnowStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#A0C8DC</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonNumberStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">#A0C8DC</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonNumberStyleBottom">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:background">#A0C8DC</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="NumericalInputStyle">
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonTextSize">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="buttonWidth">
        <item name="android:layout_width">220dp</item>

    </style>

    <style name="buttonHeight">
        <item name="android:layout_height">200dp</item>
    </style>


</resources>
